<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href='http://fonts.googleapis.com/css?family=PT+Sans:400,700' rel='stylesheet' type='text/css'>

    <link href="~/Content/mypost-global.css" rel="stylesheet" />
    <link href="~/Content/reset.css" rel="stylesheet" />
    <link href="~/Content/mypost-media-screen.css" rel="stylesheet" />
    <link href="~/Content/mypost-login.css" rel="stylesheet" />

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="js/html5shiv.js"></script>
    <![endif]-->
</head>
<body>
    <div class="bg"></div>

    <div class="mypost-login">
        <h3 class="titulo">My-Post</h3>

        <div class="container-login">
            @RenderBody()
        </div>
    </div>
    <script src="~/Scripts/libs/pubsub.js" type="text/javascript"></script>
    <script data-main="/scripts/app" src="/Scripts/libs/require.js" type="text/javascript"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
